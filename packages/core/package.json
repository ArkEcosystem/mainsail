{
	"name": "@arkecosystem/core",
	"version": "0.0.1",
	"description": "Core of the ARK Blockchain",
	"license": "MIT",
	"contributors": [],
	"main": "distribution/index.js",
	"types": "distribution/index.d.ts",
	"bin": {
		"ark": "./bin/run"
	},
	"files": [
		"/bin",
		"/distribution"
	],
	"scripts": {
		"ark": "node ./bin/run",
		"build": "pnpm run clean && tsc",
		"build:watch": "pnpm run clean && tsc -w",
		"clean": "del distribution",
		"clean:full": "del distribution && del node_modules && del .turbo",
		"full:testnet": "cross-env CORE_PATH_CONFIG=./bin/config/testnet pnpm run ark core:run -- --networkStart --env=test --token=ark --network=testnet",
		"test": "uvu -r tsm source .test.ts",
		"test:coverage": "c8 pnpm run test",
		"test:coverage:html": "c8 -r html --all pnpm run test",
		"test:file": "uvu -r tsm source"
	},
	"dependencies": {
		"@arkecosystem/core-api": "workspace:*",
