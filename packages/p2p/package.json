{
	"name": "@mainsail/p2p",
	"version": "0.0.1-alpha.13",
	"description": "P2P for the Mainsail blockchain",
	"license": "GPL-3.0-only",
	"contributors": [],
	"type": "module",
	"main": "distribution/index.js",
	"types": "distribution/index.d.ts",
	"files": [
		"/distribution"
	],
	"scripts": {
		"build": "pnpm run clean && tsc",
		"build:proto": "pnpm pbjs && pnpm pbts",
		"build:watch": "pnpm run clean && tsc -w",
		"clean": "del distribution",
		"pbjs": "pbjs -t static-module -w commonjs source/socket-server/codecs/proto/*.proto -o source/socket-server/codecs/proto/protos.js",
		"pbts": "pbts source/socket-server/codecs/proto/protos.js -o source/socket-server/codecs/proto/protos.d.ts",
		"release": "pnpm publish --access public",
		"test": "pnpm run uvu source .test.ts",
		"test:coverage": "c8 pnpm run test",
		"test:coverage:html": "c8 -r html --all pnpm run test",
		"test:file": "pnpm run uvu source",
		"uvu": "tsx --tsconfig ../../tsconfig.test.json ./node_modules/uvu/bin.js"
	},
	"dependencies": {
		"@hapi/boom": "10.0.1",
		"@hapi/bounce": "3.0.1",
		"@hapi/hapi": "21.3.6",
		"@hapi/hoek": "11.0.4",
		"@hapi/teamwork": "6.0.0",
		"@mainsail/container": "workspace:*",
		"@mainsail/contracts": "workspace:*",
		"@mainsail/kernel": "workspace:*",
		"@mainsail/utils": "workspace:*",
		"ajv": "8.12.0",
		"dayjs": "1.11.10",
		"delay": "6.0.0",
		"fs-extra": "11.2.0",
		"ip": "2.0.1",
		"ipaddr.js": "2.1.0",
		"joi": "17.12.2",
		"long": "^5.2.3",
		"protobufjs": "7.2.6",
		"rate-limiter-flexible": "5.0.0",
		"semver": "7.6.0",
		"ws": "8.16.0"
	},
	"devDependencies": {
		"@mainsail/validation": "workspace:*",
		"@types/delay": "3.1.0",
		"@types/fs-extra": "11.0.4",
		"@types/hapi__sntp": "3.1.4",
		"@types/ip": "1.1.3",
		"@types/semver": "7.5.8",
		"@types/ws": "8.5.10",
		"import-fresh": "3.3.0",
		"protobufjs-cli": "1.1.2",
		"esmock": "2.6.4",
		"uvu": "^0.5.6"
	},
	"engines": {
		"node": ">=20.x"
	},
	"arkecosystem": {
		"core": {
			"alias": "p2p"
		}
	}
}
