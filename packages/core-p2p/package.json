{
	"name": "@mainsail/core-p2p",
	"version": "0.0.1",
	"description": "P2P API for ARK Core",
	"license": "MIT",
	"contributors": [],
	"main": "distribution/index.js",
	"types": "distribution/index.d.ts",
	"files": [
		"/distribution"
	],
	"scripts": {
		"build": "pnpm run clean && tsc",
		"build:proto": "pnpm pbjs && pnpm pbts",
		"build:watch": "pnpm run clean && tsc -w",
		"clean": "del distribution",
		"pbjs": "pbjs -t static-module -w commonjs source/socket-server/codecs/proto/*.proto -o source/socket-server/codecs/proto/protos.js",
		"pbts": "pbts source/socket-server/codecs/proto/protos.js -o source/socket-server/codecs/proto/protos.d.ts",
		"test": "uvu -r tsm source .test.ts",
		"test:coverage": "c8 pnpm run test",
		"test:coverage:html": "c8 -r html --all pnpm run test",
		"test:file": "uvu -r tsm source"
	},
	"dependencies": {
		"@mainsail/container": "workspace:*",
		"@mainsail/contracts": "workspace:*",
		"@mainsail/crypto-validation": "workspace:*",
		"@mainsail/kernel": "workspace:*",
		"@mainsail/core-state": "workspace:*",
		"@mainsail/utils": "workspace:*",
		"@hapi/boom": "9.0.0",
		"@hapi/bounce": "2.0.0",
		"@hapi/hapi": "20.1.5",
		"@hapi/hoek": "9.2.0",
		"@hapi/sntp": "4.0.0",
		"@hapi/teamwork": "5.1.0",
		"ajv": "8.11.0",
		"dayjs": "1.10.7",
		"delay": "4.4.1",
		"ip": "1.1.5",
		"ipaddr.js": "2.0.1",
		"joi": "17.4.2",
		"pluralize": "8.0.0",
		"pretty-ms": "7.0.1",
		"protobufjs": "6.10.2",
		"rate-limiter-flexible": "1.3.2",
		"semver": "6.3.0",
		"ws": "7.5.5"
	},
	"devDependencies": {
		"@mainsail/core-validation": "workspace:*",
		"@types/better-sqlite3": "5.4.3",
		"@types/fs-extra": "8.1.2",
		"@types/hapi__sntp": "3.1.2",
		"@types/ip": "1.1.0",
		"@types/semver": "6.2.3",
		"import-fresh": "3.3.0",
		"rewiremock": "3.14.5",
		"uvu": "0.5.3"
	},
	"engines": {
		"node": ">=16.x"
	},
	"arkecosystem": {
		"core": {
			"alias": "p2p"
		}
	}
}
